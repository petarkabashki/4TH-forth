90 PRINT "LET'S PUT THEM IN ORDER LIKE THIS: ";
100 FOR J=1 TO L-1: I=J-1: T=@(J)
110 IF T>@(I) THEN 130
120 @(I+1)=@(I): I=I-1: IF (I=0)+(I>0) THEN 110
130 @(I+1)=T: NEXT J
140 FOR I=0 TO L-1: PRINT CHR(@(I));: NEXT I: PRINT: PRINT
